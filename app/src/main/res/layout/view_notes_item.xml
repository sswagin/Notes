<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/view_notes_item_corner_radius"
    android:id="@+id/card_view"
    android:padding="@dimen/view_notes_item_padding"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_notes_item_height"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="8dp"
    app:cardBackgroundColor="@android:color/white"
    android:backgroundTint="@android:color/holo_green_dark"

    android:layout_margin="2dp"
    android:layout_centerInParent="true">

    <TextView
        style="@style/PrimaryTextViewStyle"
        tools:text="primary text"
        android:id="@+id/primary_text_view"/>

    <TextView
        style="@style/DefaultTextViewStyle"
        tools:text="secondary text secondary text secondary text secondary text secondary text secondary text secondary text secondary text secondary text secondary text secondary text "
        android:layout_gravity="bottom"
        android:id="@+id/secondary_text_view"/>

    <TextView
        style="@style/DefaultTextViewStyle"
        tools:text="secondary2 text secondary2 text secondary2 text "
        android:layout_gravity="bottom"
        android:paddingLeft="50dp"
        android:id="@+id/secondary2_text_view"/>

    <TextView
        style="@style/SecondaryTextViewStyle"
        android:id="@+id/date_text_view"
        android:layout_gravity="right"
        tools:text="text"
        />




</android.support.v7.widget.CardView>